<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson2.Lesson2FlagsActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="121dp"
            android:background="#bdbdbd"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#DA0311"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#0032A0"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="41dp"
                android:background="#F2A800"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="121dp"
            android:background="#000000"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:background="#FAE041"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:background="#ED2938"
                android:orientation="vertical" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="121dp"
            android:background="#C70930"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginTop="51dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <RelativeLayout
                android:layout_marginStart="61dp"
                android:background="#FFFFFF"
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="121dp"
            android:background="#ED2938"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="41dp"
                android:background="#FFFFFF"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="121dp"
            android:background="#9E2F38"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="121dp"
            android:background="#FA0B0A"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="27dp"
                android:background="#F7EF17"
                android:orientation="vertical" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>