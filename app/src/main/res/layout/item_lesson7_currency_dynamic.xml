<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/codeCurrencyDynamicLesson7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/rateLastDayCurrencyDynamicLesson7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/dateCurrencyDynamicLesson7"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/codeCurrencyDynamicLesson7"
        android:layout_alignBottom="@+id/rateLastDayCurrencyDynamicLesson7"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/codeCurrencyDynamicLesson7"
        android:textAlignment="viewEnd" />

</RelativeLayout>